<h3>配送先登録/一覧</h3>
<div class="create-address">
  <%= form_with model:@address, url:'/addresses', local:true do |f| %>
    <%= f.label :postal_code, "郵便番号(ハイフンなし)"%>
    <%= f.text_field :postal_code %><br>
    <%= f.label :address, "住所"%>
    <%= f.text_field :address %><br>
    <%= f.label :name, "宛名"%>
    <%= f.text_field :name %>
    <button type="submit" class="btn btn-success">登録する</button>
  <% end %>
</div>
<table class="address-list">
  <colgroup span="4"></colgroup>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
    </tr>
  </thead>
  <% @addresses.each do |address| %>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td>
      <%= link_to '編集する', edit_address_path(id: address.id), class:"btn btn-primary" %>
      <%= link_to '削除する', address_path(id: address.id),method: :delete, class:"btn btn-danger" %>
    </td>
  </tr>
  <% end %>
</table>
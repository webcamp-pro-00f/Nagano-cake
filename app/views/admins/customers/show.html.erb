<!--他にも書き方がある？-->
<div class="container">
  <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
  <div class="row">
    <table class="table table-borderless col-6">
      <tr>
        <th>顧客ID</th>
        <!--退会フラグを右側につける-->
        <th><%= @customer.id %></th>
      </tr>
      <tr>
        <th>氏名</th>
        <th><%= @customer.last_name %>　<%= @customer.first_name %></th>
      </tr>
      <tr>
        <th>フリガナ</th>
        <th><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></th>
      </tr>
      <tr>
        <th>郵便番号</th>
        <th><%= @customer.postal_code %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= @customer.address %></th>
      </tr>
      <tr>
        <th>電話番号</th>
        <th><%= @customer.telephone_number %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>
    </table>
    <!--注文履歴一覧へのリンク-->
  </div>
</div>
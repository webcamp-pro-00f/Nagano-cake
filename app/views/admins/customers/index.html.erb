<div class="container">
  <h2>会員一覧</h2>
  <div class="row">
    <table class="table table-striped table-hover mx-auto col-8">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admins_customer_path(customer) do %>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <% if customer.is_deleted == true %>
            <td>退会済</td>
          <% else %>
            <td>有効</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @customers %> 
  </div>
</div>

<div class="container">
  <h4 style="margin: 40px;" class="product_title_show">商品詳細</h4>
  <div class="row mt-5 table_width_show">
    <%= attachment_image_tag @product, :image, format: "jpeg", size: "200x180", class: "col-3 " %>
    <table class="col-5 ml-5 table_width">
      <tr>
        <td>商品名</td>
        <td><%= @product.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @product.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @product.category.name %></td>
      </tr>
      <tr>
        <td>税込価格(税抜価格)</td>
        <td><%= converting_to_jpy(@product.price + (@product.price * @tax).ceil) %>(<%= converting_to_jpy(@product.price) %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
        <% if @product.is_active == true %>
         販売中
        <% else %>
         売り切れ
        <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="row justify-content-end mr-5 ">
    <%= link_to "編集する",edit_admins_product_path(@product), class: "btn btn-primary" %>
  </div>
</div>
<div class="container">
  <h4 class="md-5 product_title">商品編集</h4>
  <div class="row mt-5 ">
    <%= form_with model: @product, url: admins_product_path(@product), local: true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="col-5 ml-5">
      <div class="form-group">
        <%= f.attachment_field :image %>
      </div>
    </div>
    <div class="col-7 ml-5">
      <div class="form-group">
        <%= f.label "商品名" %>
        <%= f.text_area :name %>
      </div>
      <div class="form-group">
        <%= f.label "商品説明" %>
        <%= f.text_field :introduction %>
      </div>
      <div>
        <%= f.label "ジャンル" %>
        <%= f.collection_select(:category_id, Category.all, :id, :name) %>
      </div>
      <div class="form-group">
      <p>税抜価格</p>
        <%= f.text_field :price %>円
      </div class="form-group">
      <p>販売ステータス</p>
      　<%= f.select :is_active, [['販売中',true],['売り切れ',false]] %>
      <div class="form-group">
        <%= f.submit "変更を保存", class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
<% end %>

